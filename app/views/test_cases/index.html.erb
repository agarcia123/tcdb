<p id="tc_list"><%= notice %></p>

<h1>Listing Test Cases</h1>
<div id="tc_list">
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Short description</th>
      <th>Req id</th>
      <th>Author</th>
      <th>Test case type</th>
      <th>Preconditions</th>
      <!--<th>Steps</th>
      <th Expected res</th> -->
      <th co ="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @test_cases.each do |test_case| %>
      <tr class="<%= cycle('list_line_odd','list_line_even') %>">
        <td><%= test_case.id %></td>
        <td><%= test_case.name %></td>
        <td><%= test_case.shdesc %></td>
        <td><%= test_case.req_id %></td>
        <td><%= test_case.author %></td>
        <td><%= test_case.tctype %></td>
        <td><%= test_case.preconditions %></td>
      <!--  <td><%= test_case.steps %></td>
        <td><%= test_case.expected_res %></td> -->
        <td><%= link_to 'Show', test_case %></td>
        <td><%= link_to 'Edit', edit_test_case_path(test_case) %></td>
        <td><%= link_to 'Destroy', test_case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>
</div>
<br>

<%= link_to 'New Test case', new_test_case_path %>
